{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <section>
        <h1>Post</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ post.dateCreated ? post.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ post.message }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('post_index') }}">back to list</a>

        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

        {{ include('admin/post/_delete_form.html.twig') }}
    </section>
{% endblock %}
