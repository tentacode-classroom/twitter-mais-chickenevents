{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <a class="back" href="{{ path('post_index') }}">Retour à la list</a>

    <h1>Post : {{ post.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ post.dateCreated ? post.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ post.user.firstname }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ post.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_edit', {'id': post.id}) }}">Éditer</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
